<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header_city"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/city_one"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_city" />

    <View
        android:id="@+id/city_two"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toEndOf="@+id/city_one"
        app:layout_constraintTop_toBottomOf="@+id/header_city" />

    <View
        android:id="@+id/city_three"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toEndOf="@+id/city_two"
        app:layout_constraintTop_toBottomOf="@+id/header_city" />

    <View
        android:id="@+id/header_category"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_one" />

    <View
        android:id="@+id/category_one"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_category" />

    <View
        android:id="@+id/category_two"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toEndOf="@+id/category_one"
        app:layout_constraintTop_toBottomOf="@+id/header_category" />

    <View
        android:id="@+id/category_three"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toEndOf="@+id/category_two"
        app:layout_constraintTop_toBottomOf="@+id/header_category" />

    <View
        android:id="@+id/header_featured"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_one" />

    <include
        android:id="@+id/cafe_one"
        layout="@layout/cafe_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_featured" />

    <include
        android:id="@+id/cafe_two"
        layout="@layout/cafe_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafe_one" />

    <include
        android:id="@+id/cafe_three"
        layout="@layout/cafe_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafe_two" />

</androidx.constraintlayout.widget.ConstraintLayout>